<p id="notice"><%= notice %></p>

<h1>Products</h1>
購物車：<%= @cart.items.count %>
<% unless @cart.empty? %>
  <%= link_to "檢視", cart_path %>
  <%= link_to "清空", cart_path, method: "delete" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= link_to "放入購物車", add_cart_path(product), method: "post" %>
          <%= link_to product.title, product %>
        </td>
        <td><%= product.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
